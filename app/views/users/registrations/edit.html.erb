<div class="mb-3 md:mt-10 md:w-2/3 md:mx-auto">
  <h2 class="text-3xl mb-3 md:text-center">ユーザー情報の編集 <%#= resource_name.to_s.humanize %></h2>

  <%= form_with model: @user, url: registration_path(resource_name), local: true, class: "bg-white px-6 py-5 rounded-md", html: { data: { turbo_method: :put } } do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <%# -------- Eメールアドレス -------- %>
    <div class="mb-3">
      <%= f.label :email, class: "font-semibold block p-1 required" %>
      <div class="relative">
        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
          <span class="text-gray-600">
            <%= icon("solid", "envelope") %>
          </span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "email@example.com" %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%# -------- パスワード -------- %>
    <div class="mb-3">
      <%= f.label :password, "パスワード (6文字以上)", class: "font-semibold block p-1 required" %>
      <div class="relative">
        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
          <span class="text-gray-600">
            <%= icon("solid", "lock") %>
          </span>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      </div>
    </div>

    <%# -------- パスワード（確認用） -------- %>
    <div class="mb-5">
      <%= f.label :password_confirmation, class: "font-semibold block p-1 required" %>
      <div class="relative">
        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
          <span class="text-gray-600">
            <%= icon("solid", "lock") %>
          </span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>
    </div>

    <hr class="mb-3">
    <%# -------- 現在のパスワード -------- %>
    <div class="mb-3">
      <%= f.label :current_password, "現在のパスワード", class: "font-semibold block p-1 required" %>
      <div class="relative">
        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
          <span class="text-gray-600">
            <%= icon("solid", "key") %>
          </span>
        </div>
        <%= f.password_field :current_password, autocomplete: "new-password", class: "form-input" %>
      </div>
      <p class="px-1">※情報を更新するためには現在のパスワードを入力してください</p>
    </div>

    <div class="actions mb-3">
      <%= f.submit "更新する", class: "btn btn-sky" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "アカウントを削除する", registration_path(resource_name), class: "link", data: { turbo_confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "<<戻る", :back, class: "link" %>
</div>
