<div class="mb-3 md:mt-10 md:w-2/3 md:mx-auto">
  <h2 class="text-3xl mb-3 md:text-center">新しいパスワードを入力</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <div class="bg-white px-6 py-5 rounded-md">
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <%# -------- パスワード -------- %>
      <div class="mb-3">
        <%= f.label :password, "新しいパスワード (6文字以上)", class: "font-semibold block p-1 required" %>
        <div class="relative">
          <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
            <span class="text-gray-600">
              <%= icon("solid", "lock") %>
            </span>
          </div>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input" %>
        </div>
      </div>

      <%# -------- パスワード（確認用） -------- %>
      <div class="mb-5">
        <%= f.label :password_confirmation, class: "font-semibold block p-1 required" %>
        <div class="relative">
          <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
            <span class="text-gray-600">
              <%= icon("solid", "lock") %>
            </span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
        </div>
      </div>

      <div class="md:flex items-center md:justify-between">
        <%= f.submit "パスワードを変更する", class: "btn btn-sky"%>
        <div class="md:text-right text-sm">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  <% end %>

</div>
